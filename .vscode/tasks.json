{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "echo Hello"
        },
        {
            "type": "docker-build",
            "label": "docker-build",
            "platform": "python",
            "dockerBuild": {
                "tag": "krzyzak21spacedocker:latest",
                "dockerfile": "${workspaceFolder}/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: debug",
            "dockerRun": {
                "envFiles": ["${workspaceFolder}/.env"]
            },
            "dependsOn": ["docker-build"],
            "python": {
                "args": ["runserver", "0.0.0.0:8000", "--nothreading", "--noreload"],
                "file": "manage.py"
            }
        }
    ]
}
